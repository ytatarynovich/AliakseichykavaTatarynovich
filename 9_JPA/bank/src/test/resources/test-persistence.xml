<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="com.epam.jmp.bank">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>com.epam.jmp.bank.model.Account</class>
		<class>com.epam.jmp.bank.model.Bank</class>
		<class>com.epam.jmp.bank.model.CurrencyRate</class>
		<class>com.epam.jmp.bank.model.Employee</class>
		<class>com.epam.jmp.bank.model.Person</class>
		<class>com.epam.jmp.bank.model.Role</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:testDataSource"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
			<property name="show_sql" value="true"/>
		</properties>

	</persistence-unit>

</persistence>